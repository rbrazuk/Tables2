<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.rbrazuk.tables.TableActivity">

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/positionTextView"
        android:text="Pos"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#BF000000"
        />
    <TextView
        android:paddingLeft="5dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/teamNameTextView"
        android:text="Team"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textColor="#BF000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/positionTextView"
        android:layout_toEndOf="@+id/positionTextView"/>
    <TextView
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goalDifferenceTextView"
        android:textSize="20sp"
        android:text="GD"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/pointsTextView"
        android:layout_toStartOf="@+id/pointsTextView"
        android:layout_marginRight="12dp"
        android:textStyle="bold"
        android:textColor="#BF000000"/>
    <TextView
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointsTextView"
        android:text="PT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#BF000000"/>



    <ListView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_table"
        android:layout_below="@+id/positionTextView"></ListView>

</RelativeLayout>